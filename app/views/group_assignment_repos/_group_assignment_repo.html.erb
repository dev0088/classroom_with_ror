<% group_assignment_repo = group_assignment_repo.decorate %>

<div class="flex-table group-assignment-repo-list-item">
  <div class="flex-table-item">
    <%= link_to group_assignment_repo.github_team_url, class: 'team-name' do %>
      <strong class="css-truncate-target"><%= group_assignment_repo.team_name %></strong>
    <% end %>

    <% group_assignment_repo.group.repo_accesses.limit(8).each do |repo_access| %>
      <% student = repo_access.user.decorate %>

      <%= link_to student.github_url do %>
        <%= image_tag student.avatar_url(60), class: 'avatar avatar-small ', height: 30, width: 30, alt: "@#{student.login}" %>
      <% end %>
    <% end %>

    <% if group_assignment_repo.group.repo_accesses.count > 8 %>
      <span class="student-ellipse">...</span>
    <% end %>
  </div>

  <div class="flex-table-item text-right">
    <strong><%= link_to group_assignment_repo.github_repo_url, group_assignment_repo.github_repo_url, class: 'assignment-repo-github-url' %></strong>
  </div>
</div>
