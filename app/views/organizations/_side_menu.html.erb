<% organization = @organization || current_organization %>

<nav class="menu">
  <span class="menu-heading"><%= t('views.organizations.classroom_settings') %></span>

  <%= link_to t('views.organizations.classroom_profile'), edit_organization_path(organization),
              class: "menu-item #{'selected' if current_page?(edit_organization_path(organization))}" %>

  <% if team_management_enabled? %>
    <%= link_to t('views.organizations.team_management'), settings_teams_organization_path(organization),
                class: "menu-item #{'selected' if current_page?(settings_teams_organization_path(organization))}" %>
  <% end %>

  <%= link_to t('views.organizations.invite_other_admin'),
              settings_invitations_organization_path(organization),
              class: "menu-item #{'selected' if current_page?(settings_invitations_organization_path(organization))}" %>

  <%= link_to 'Roster management', roster_path(organization),
              class: "menu-item #{'selected' if current_page?(roster_path(organization))}" %>

  <% if lti_launch_enabled? %>
    <%= link_to 'LMS configuration', lti_configuration_path(organization),
                  class: "menu-item #{'selected' if (current_page?(lti_configuration_path(organization)) || current_page?(info_lti_configuration_path(organization)))}" %>
  <% end %>
</nav>
