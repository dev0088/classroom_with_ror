<div class="remodal-bg">
  <%= render 'organizations/organization_banner' %>

  <div class="columns">
    <div class="one-fourth column">
      <%= render partial: 'organizations/side_menu' %>
    </div>
    <div class="three-fourths column">
      <div class="site-content">
        <div class="site-content-cap">
          <h2 class="site-content-heading">Learning Management System Configuration</h2>
        </div>

        <div class="site-content-body markdown-body">
          <p>You or your system administrator will need to add a new application to
          your Learning Management System with the following credentials generated by
          GitHub Classroom.</p>

          <%= form_with url: edit_lti_configuration_path(current_organization), class: "form-actions" do |f| %>
            <div class="form-group">
            <%= f.label :consumer_key %>
            <%= f.text_field :consumer_key, placeholder: 'Consumer Key', disabled: true, class: 'form-control input-block' %>
            </div>

            <div class="form-group">
            <%= f.label :shared_secret %>
            <%= f.text_field :shared_secret, placeholder: 'Secret', disabled: true, class: 'form-control input-block' %>
            </div>

            <div class="form-group">
            <%= f.label :lms_link %>
            <%= f.text_field :lms_link, placeholder: 'LMS Classroom Link', disabled: false, class: 'form-control input-block' %>
            </div>

            <div class="form-group">
            <%= submit_tag 'Save changes', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
