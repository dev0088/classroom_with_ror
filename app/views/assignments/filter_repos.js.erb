(function() {
    $("#assignment-repo-list").html(
        "<%= j render partial: 'assignments/assignment_roster_list', locals: {
            organization: @organization,
            assignment: @assignment,
            roster_entries: @roster_entries
        } %>"
    );

    $("#select-menu-container").html(
        "<%= j render partial: 'shared/select_menu', locals: {
            title: 'Sort assignments by:',
            options: @assignment_sort_modes.keys,
            option_links: @assignment_sort_modes_links,
            selected_option: @current_sort_mode,
            remote: true
        } %>"
    );
    initialize_select_menu();

    $("#sort-mode-field").val("<%= @current_sort_mode %>");
    $("#search-query-field").val("<%= @query %>");
})();