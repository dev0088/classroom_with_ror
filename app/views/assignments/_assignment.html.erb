<div class="assignment-list-item flex-table">
  <div class="flex-table-item">
    <span class="assignment-icon assignment-icon-individual left">
      <%= octicon('person') %>
    </span>
    <h3 class="assignment-name-link">
      <%= link_to assignment.title, organization_assignment_path(@organization, assignment), class: 'js-navigation' %>
    </h3>
    <p class="assignment-type text-muted">Individual assigment</p>
  </div>

  <div class="flex-table-item zeroclipboard-form">
    <div class="input-group assignment-invite-link">
      <%= content_tag :input, '', type: 'text', id: assignment.invitation.key, class: 'js-url-field', value: assignment_invitation_url(assignment.invitation), readonly: 'readonly' %>
      <span class="input-group-button">
        <button aria-label="Copy to clipboard" id=<%= assignment.invitation.key %> class="js-zeroclipboard btn tooltipped tooltipped-s" data-copied-hint="Copied!" type="button">
          <%= octicon('clippy') %>
          Copy invitation link
        </button>
      </span>
    </div>
  </div>
</div>
