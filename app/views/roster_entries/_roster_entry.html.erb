<% if assignment_repo %>
  <% # student who is linked and has accepted %>
  <%= render partial: 'assignment_repos/linked_accepted_assignment_repo', locals: { assignment_repo: assignment_repo } %>
<% elsif roster_entry.user %>
  <% # student who is linked but has not accepted %>
  <%= render partial: 'assignment_repos/linked_not_accepted_assignment_repo', locals: { entry: roster_entry } %>
<% else %>
  <% # student who has not joined classroom yet %>
  <%= render partial: 'roster_entries/not_in_classroom_roster_entry', locals: { entry: roster_entry } %>
<% end %>
