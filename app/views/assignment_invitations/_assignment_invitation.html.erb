<form>
  <dt><label>Give this to your students</label></dt>
  <% invitation_url = request.base_url + assignment_invitation_path(assignment_invitation.key) %>
  <div class="input-group">
    <%= content_tag :input, '', type: 'text', class: 'js-url-field', value: "#{invitation_url}", readonly: 'readonly' %>
    <span class="input-group-button">
      <button aria-label="Copy to clipboard" class="js-zeroclipboard btn tooltipped tooltipped-s" data-copied-hint="Copied!" type="button">
        <%= octicon('clippy') %>
      </button>
    </span>
  </div>
</form>
