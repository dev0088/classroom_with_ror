<%= content_tag :div, class: 'modal', id: modal_id, "aria-hidden" => "true" do %>
  <div class="modal-dialog">
    <div class="modal-header">
      <h3>
        Are you ABSOLUTLEY SURE?
        <%= link_to '', class: 'btn-close right', 'aria-hidden' => 'true' do %>
          <%= octicon('x') %>
        <% end %>
      </h3>
    </div>

    <div class="modal-warning text-center">
      <p>Please read this before continuing!</p>
    </div>

    <div class="modal-body">
      <p>
        This will not effect your organization on GitHub, however you will not be able to use this invitation again.
      </p>
    </div>

    <div class="modal-footer">
      <% invitation = @organization.invitation %>
      <%= form_for [@organization, invitation], url: organization_invitation_path(@organization, invitation), html: { method: :delete } do |f| %>
        <%= f.submit 'I understand the consequences, remove the invitation', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
<% end %>
