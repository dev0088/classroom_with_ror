<% view = AssignmentRepoView.new(assignment_repo: @assignment_repo) %>

<div class='group-assignment-repo-list-item'>
  <div>
    <div style='display: flex;'>
      <div>
        <%= image_tag @assignment_repo.github_user.github_avatar_url(96), height: 48, width: 48, class: 'avatar avatar-large', alt: "@#{@assignment_repo.github_user.login}" %>
      </div>
      <div>
        <%= link_to "https://github.com/#{@assignment_repo.github_user.login}", class: "assignment-repo-github-url #{view.disabled_class}", target: '_blank' do %>
          <h3 class="css-truncate css-truncate-target"><%= @assignment_repo.github_user.login %></h3>
        <% end %>
      </div>
    </div>
    <div class="assignment-properties">
      <%= render 'shared/commit_repo_detail', text: view.commit_text, url: 'Dummy URL' %>
    </div>
  </div>
  <div>
    <%= link_to 'View Repository', view.repo_url, class: 'btn btn-green right', role: 'button', target: '_blank', disabled: view.disabled_class %>
  </div>
</div>
