<% content_for :organization_banner do %>
  <div class="organization-banner">
    <div class="container">
      <%= link_to 'Edit', edit_organization_path(@organization), class: 'btn btn-green' %>
      <h1 class="organization-name"><%= @organization.title %></h1>
    </div>
  </div>
<% end %>

<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading">
      <span class="assignment-icon assignment-icon-group">
        <%= octicon('organization') %>
      </span>
      New group assignment
    </h2>

  </div>
</div>

<div class="site-content-body">
  <% url = organization_group_assignments_path(@organization) %>
  <%= form_for @group_assignment, url: url do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <dl class="form">
      <dt><%= f.label :title %></dt>
      <dd><%= f.text_field :title, class: 'textfield' %></dd>
    </dl>

    <dl class="form">
      <div class="form-checkbox">
        <label><%= f.radio_button :public_repo, true %> Public</label>
        <%= mega_octicon('repo') %>
        <span class="note">Anyone can see this repository. You choose who can commit.</span>
      </div>

      <div class="form-checkbox">
        <label><%= f.radio_button :public_repo, false %> Private</label>
        <%= mega_octicon('lock') %>
        <span class="note">You choose who can see and commit to this repository.</span>
      </div>
    </dl>

    <dl class="form">
      <dt><label>Add your starter code from GitHub <small>(Optional)</small> </label></dt>
      <dd><input class="textfield" type="text" name="repo_name" placeholder="e.g. education/classroom"></dd>
    </dl>

    <dl class="form">
      <dt><label>Create a new group of teams</label></dt>
      <dd><input class="textfield" type="text" name="grouping[title]" id="grouping_title"></dd>
    </dl>

    <% if @organization.groupings.present? %>
      <dt><label>OR choose an existing group of teams</label></dt>
      <dl class="form">G
        <dd>
          <%= select :group_assignment, :grouping_id, options_for_select(@groupings), include_blank: true %>
        </dd>
      </dl>
    <% end %>

    <div class="form-actions">
      <%= f.submit 'Create Assignment', class: 'btn btn-green', id: 'group_assignment_submit', disabled: true %>
      <%= link_to 'Cancel', organization_path(@organization), class: 'btn', role: 'button' %>
    </div>
  <% end %>
</div>
