<div class="site-content">
  <div class="site-content-cap">
    <span class="assignment-icon assignment-icon-group left">
      <%= octicon('repo') %>
    </span>

    <h2 class="site-content-heading">
      Group Assignment Repo <%= group_assignment_repo.id %>
    </h2>

    <p class="assignment-type text-muted">Group assigment repo</p>
  </div>

  <div class="site-content-body">
    <div class="boxed-group">
      <h3>Info</h3>

      <div class="boxed-group-inner">
        <p>
          <% creator      = group_assignment_repo.creator.decorate %>
          <% organization = group_assignment_repo.organization.decorate %>

          <h4>ID <%= group_assignment_repo.id %></h4>
          <h4>Owned by <%= link_to organization.title, stafftools_organization_path(organization) %>
          <h4>Created by <%= link_to creator.login, stafftools_user_path(creator) %>
          <h4>Group Assignment <%= link_to group_assignment_repo.group_assignment.title, stafftools_group_assignment_path(group_assignment_repo.group_assignment.id) %>
          <h4>Group <%= link_to group_assignment_repo.group.title, stafftools_group_path(group_assignment_repo.group) %>
          <h4>Created on <span class="lead"><%= local_time(group_assignment_repo.created_at) %></span></h4>
        </p>
      </div>
    </div>
  </div>
</div>
