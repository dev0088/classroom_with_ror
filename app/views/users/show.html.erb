<div class="site-content">
  <div class="site-content-cap">
    <% if @organizations.present? %>
      <%= link_to new_organization_path, class: 'btn btn-green right', role: 'button' do %>
        Add organization
      <% end %>
    <% end %>
    <h2 class="site-content-heading">Organizations</h2>
  </div>

  <div class="site-content-body">
    <% if @organizations.present? %>
      <%= render @organizations %>
      <%= paginate @organizations %>

      <% else %>
        <div class="blankslate large-format spacious clean-background">
          <h3>Youâ€™re not managing any organizations yet.</h3>
          <p>You can begin creating assignments once you have at least one organization.</p>

          <%= link_to new_organization_path, class: 'btn btn-green btn-big', role: 'button' do %>
            Add your first organization
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
