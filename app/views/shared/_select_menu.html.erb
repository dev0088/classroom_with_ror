<div class="select-menu">
  <button class="btn ml-2 select-menu-button" aria-expanded="false" tabindex="0">
    <i><%= title %></i>
    <span><%= selected_option %></span>
  </button>
  <div class="select-menu-modal-holder">
    <div class="select-menu-modal">
      <div class="select-menu-header" tabindex="-1">
        <%= octicon 'x', class: "select-menu-close-button" %>
        <span class="select-menu-title"><%= title %></span>
      </div>
      <div class="select-menu-list">
        <% options.each_with_index do |option, i| %>
          <% if option == selected_option %>
            <span class="select-menu-item selected">
              <%= octicon 'check', class: "select-menu-item-icon" %>
              <span class="select-menu-item-text">
                <%= selected_option %>
              </span>
            </span>
          <% else %>
            <%= link_to option_links[i], class: "select-menu-item" do %>
              <span class="select-menu-item-text"><%= option %></span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
